{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}



{% block body %}

<main class="mainReadMessage">

  <div class="containtReadMessage">
 
        <h1>Messagerie</h1>

        <p>Message de {{message.sender.pseudonyme}} reçu le {{message.creationDate|date("d/m/Y à H:i")}}</p>

        <div class="containteMessage">{{message.message}}</div>


        {# <div class="col">
          <a href="{{ path("app_mailbox")}}" class="btn btn-primary">Retour à la boite de réception</a>
        </div> #}



        {{ form_start(formMessage)}}

          {{ form_row(formMessage.message)}}

          <div class="boutons">
            {{ form_row(formMessage.envoyer)}}
            <a href="{{ path("app_mailbox")}}" class="btn btn-secondary">Retour à la boite de réception</a>
          </div>

        {{ form_end(formMessage)}}
  </div>


</main>

{% endblock %}

{% block javascripts %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{% endblock %}