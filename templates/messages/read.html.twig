{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}



{% block body %}

  <section class="container">
    <div class="row">
        <div class="col-12">
            <h1>Messagerie</h1>
            
            <p>Message de {{message.sender.pseudonyme}}</p>
            <p>Le {{message.creationDate|date}}</p>
            <div>{{message.message}}</div>           

        <div class="col">
            <a href="{{ path("app_mailbox")}}" class="btn btn-primary">Retour à la boite de réception</a>
            <a href="{{ path('app_reponse', {'id': message.sender.id} )}}">répondre</a>
        </div>
    </div>
  </section>

{% endblock %}

{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{% endblock %}
