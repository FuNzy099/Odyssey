{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/layoutStyles/layout.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}

{% block body %}

  <section class="container">
    <div class="row">
        <div class="col">
            <h1>Messagerie</h1>
            <p>Résumé de la messagerie</p>
            <p>Reçus : {{ app.user.received|length}}</p>
            <p>Envoyés : {{ app.user.send|length}}</p>
            <a href="{{ path("send")}}" class="btn btn-primary">Envoyer un message</a>
        </div>
    </div>
  </section>

{% endblock %}

{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{% endblock %}
