{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/layoutStyles/layout.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}

{% block body %}

  <section class="container">
    <div class="row">
        <div class="col-12">
            <h1>Messagerie</h1>
            <h2>Boite de réception</h2>
            <a href="{{ path('app_send')}}" class="btn btn-secondary">Envoyez un message</a>
            <a href="{{ path('app_outbox')}}" class="btn btn-primary">Messages envoyés</a>
            <p>Vous avez reçu : {{app.user.received|length}} messages</p>
        </div>  

        <div class="col-3">De</div>
        <div class="col-3">Message</div>
        <div class="col-3">Date</div>
        <div class="col-3">Actions</div>

        {% for message in received %}
            {% if message.isRead == 0 %}
                {% set bold = "fw-bold" %}
            {% else %}
                {% set bold = "" %}
            {% endif %}
            <div class="col-3 {{bold}}">{{message.sender.pseudonyme}}</div>
            <div class="col-3 {{bold}}">
                <a href="{{ path("app_read", {'id': message.id})}}">
                    {{message.message}}
                </a>
            </div>
            <div class="col-3 {{bold}}">{{message.creationDate|date('d-m-Y H:i')}}</div>
            <div class="col-3 {{bold}}">
                <a href="{{ path('delete', {'id': message.id })}}">Supprimer</a>
            </div>
        {% endfor %}
    </div>
  </section>

{% endblock %}

{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{% endblock %}