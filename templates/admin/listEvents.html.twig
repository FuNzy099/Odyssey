{% extends 'base.html.twig' %}

{% block title %} Panel admin | {{app.user.pseudonyme}} | liste des évènements  {% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/layoutStyles/layout.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/adminStyles/admin.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}


{% block body %}

<h1>Je suis dans la liste des évènements</h1>

    <main class="mainAdminEvents">

        <h1>Ma magnificence {{app.user.pseudonyme}}</h1>

        <p>Vous retrouverez ici la liste complète des évènement enregistré sur le site web</p>

        <table class="table table-striped border">
            <thead>
                <tr>
                    <th scope="col">Créateur</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Date de création </th>
                    <th scope="col">Date de début </th>
                    <th scope="col">Date de fin</th>
                    <th scope="col">Description</th>
                    <th scope="col">Nombre de place</th>
                    <th scope="col">Nombre d'inscrit</th>
                    <th scope="col">Liste des utilisateurs inscrits</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.userCreator.pseudonyme }}</td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.creationDate|date('d/m/Y')}}</td>
                        <td>{{ event.startDate|date('d/m/Y')}}</td>
                        <td>{{ event.endDate|date('d/m/Y')}}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.maxPlaces }}</td>
                        <td>{{ event.nbRegistered}}</td>
                        <td>
                            {% if event.users|length > 0  %}

                                {% for user in event.users %}   

                                    <li> {{user.pseudonyme}} </li>      

                                {% endfor %}

                            {% else %}

                                Aucun inscrit pour cet évènement

                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('admin_edit_event', {'id' : event.id}) }}">Editer</a>
                        </td>
                        
                        {# <td>
                            <a href="{{ path('edit_user', {'id' : user.id}) }}">Editer</a>

                            <a href dataIdUser="{{url('delete_user',{id:user.id}) }}" data-bs-toggle="modal" data-bs-target="#exampleModal"  class="deleteBtn">Supprimer</a>
                            
