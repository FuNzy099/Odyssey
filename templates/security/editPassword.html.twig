{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/layoutStyles/layout.css') }}" type="text/css" rel="stylesheet" />

    <link href="{{ asset('css/formStyles/password.css') }}" type="text/css" rel="stylesheet" />
 
{% endblock %}

{% block body %}

    {{ form_start(formEditPassword) }}

        <div class="blockInputs">

            <div class="actualPassword">
                {{ form_row(formEditPassword.actualPassword) }}
            </div>

            <div class="plainPassword">
                {{ form_row(formEditPassword.plainPassword) }}
            </div>

            <div class="submit">
                {{ form_row(formEditPassword.submit) }}
            </div>

        </div>

    {{ form_end(formEditPassword) }}


{% endblock %}